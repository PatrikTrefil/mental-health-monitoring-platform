// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Task {
    id                  String   @id @default(uuid())
    name                String
    description         String?
    // Valid states are "CREATED", "PARTIALLY_COMPLETED" and "COMPLETED"
    // Prisma does not polyfill enums for sqlite, so we use a string instead
    // SQLite has checks, but those are not supported yet
    // https://github.com/prisma/prisma/issues/3388
    state               String   @default("READY")
    createdAt           DateTime @default(now())
    updatedAt           DateTime @updatedAt
    forUserId           String
    createdByEmployeeId String
    formId              String
    submissionId        String?
}
